<h1>Contents</h1>
<%= link_to 'New Content', new_content_path %>
<br>
<br>
<% @contents.each do |content| %>
  Title: <%= content.title %>
  Description: <%= content.description %>
  <%= link_to 'Show', content_path(content) %>
  <%= link_to 'Edit', edit_content_path(content) %>
  <%= link_to 'Destroy', content_path(content), method: :delete, data:{confirm: 'Are you sure you want to delete?'} %>

  <br>
<% end %>